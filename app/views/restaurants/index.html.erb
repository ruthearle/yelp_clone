<%= notice %>
<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
    <h2><%= restaurant.name %></h2>
    <ul>
      <% restaurant.reviews.each do |review| %>
        <li><%= "#{review.thoughts} (#{review.rating})"%> <em>posted <%= time_ago_in_words(review.created_at)%> ago</em>
        <%= link_to "Endorse this review", review_endorsements_path(review), class: 'endorsements_link' %>
        <span class="endorsements_count"><%= pluralize(review.endorsements.count, 'endorsement') %></span></li>
      <% end %>
      <h3>Average rating: <%= star_rating(restaurant.average_rating) %></h3>
    </ul>
    <%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %>
    <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %>
    <%= link_to "Show #{restaurant.name}", restaurant_path(restaurant) %>
    <%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant)%>
  <% end %>
<% else%>
  No restaurants yet
<% end%>
<%= link_to 'Add a restaurant', new_restaurant_path %>
